<% if thing.user_id == current_user.id %>
<table class="table boarder">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
    <% if thing.user_id == current_user.id %>
      <tr>
        <td><%= thing.name %></td>
        <td><%= thing.description %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
   <% else %>
      <tr>
        <td><%= thing.name %></td>
        <td><%= thing.description %></td>
        <td><%= link_to 'Show', thing %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<% end %>